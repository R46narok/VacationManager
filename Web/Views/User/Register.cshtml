@model ViewModels.Input.RegisterUserViewModel
@inject Core.Data.Repositories.Interfaces.IRoleRepository RoleRepo
@inject Core.Data.Repositories.Interfaces.ITeamRepository TeamRepo

@{
    ViewData["Title"] = "Регистрация";
}

<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Добави служител</h2>
            <form asp-action="Register" asp-controller="User" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div asp-validation-summary="All" class="text-danger"></div>
              <div class="form-group">
                <label class="form-label" for="Username">Потребителско име</label>
                <input asp-for="Username" class="form-control" id="Username" placeholder="Въведете потребителско име...">
                <span asp-validation-for="Username" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label class="form-label" for="FirstName">Собствено име</label>
                <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Въведете собственото име...">
                <span asp-validation-for="FirstName" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label class="form-label" for="LastName">Фамилия</label>
                <input asp-for="LastName" class="form-control" id="LastName" placeholder="Въведете фамилията...">
                <span asp-validation-for="LastName" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label class="form-label" for="Password">Парола</label>
                <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Въведете паролата...">
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label class="form-label" for="ConfirmPassword">Повтори парола</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Повторете паролата...">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label class="form-label" for="RoleName">Роля</label>
                <select class="form-control" onchange="displayTeams()" asp-for="RoleName" id="RoleName">
                  @foreach (var role in RoleRepo.GetRoles())
                  {
                    <option value="@role.Id">@role.Name</option>
                  }
                </select>
              </div>
              <div class="form-group text-center">
                <input type="submit" id="register" value="Регистрация" class="btn btn-primary btn-lg rounded-pill px-5">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


